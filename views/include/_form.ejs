<form action="/api/users" method="post" id="add_user">
    <div class="new_user">
        <div class="form-group">
            <label for="firstName" class="text-light">First Name</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="firstName" value="" placeholder="John">
        </div>

        <div class="form-group">
            <label for="lastName" class="text-light">Last Name</label>
            <!-- <input type="hidden" name="id" value=""> -->
            <input type="text" name="lastName" value="" placeholder="Doe">
        </div>

        <div class="form-group">
            <label for="password" class="text-light">Password</label>
            <!-- <input type="hidden" name="id" value=""> -->
            <input type="password" name="password" value="" placeholder="password">
        </div>

        <div class="form-group">
            <label for="phone" class="text-light">Phone</label>
            <!-- <input type="hidden" name="id" value=""> -->
            <input type="number" name="phone" value="" placeholder="+88123456789">
        </div>
        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>
    </div>
</form>