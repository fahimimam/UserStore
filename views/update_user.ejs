<!-- Include header -->
<%- include('include/_header') %>
    <!-- Include header -->

    <!-- Main Site -->
    <main id="site-main">
        <div class="container">
            <div class="box-nav d-flex justify-between">
                <div class="filter">
                    <a href="/"><i class="fas fa-angle-double-left"></i> All Users</a>
                </div>
            </div>
            <div class="form-title text-center">
                <h2 class="text-dark">Update User</h2>
                <span class="text-light">Use the below form to Update The Account</span>
            </div>
            <!-- Form Handling -->
            <!-- Include Form -->
            <form method="post" id="update_user">
                <div class="new_user">
                    <div class="form-group">
                        <label for="firstName" class="text-light">First Name</label>
                        <input type="hidden" name="id" value="">
                        <input type="text" name="name" value="" placeholder="John">
                    </div>
            
                    <div class="form-group">
                        <label for="lastName" class="text-light">Last Name</label>
                        <input type="hidden" name="id" value="">
                        <input type="text" name="name" value="" placeholder="Doe">
                    </div>
            
                    <div class="form-group">
                        <label for="password" class="text-light">Password</label>
                        <input type="hidden" name="id" value="">
                        <input type="password" name="name" value="" placeholder="password">
                    </div>
            
                    <div class="form-group">
                        <label for="phone" class="text-light">Phone</label>
                        <input type="hidden" name="id" value="">
                        <input type="number" name="phone" value="" placeholder="+88123456789">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn text-dark update">Save</button>
                    </div>
                </div>
            </form>
                <!-- Include Form -->
                <!-- Form Handling  -->
        </div>
    </main>
    <!-- Main site -->

    <!-- Include Footer -->
    <%- include('include/_footer') %>
        <!-- Include Footer -->